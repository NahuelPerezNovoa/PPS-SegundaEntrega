<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.PPSPrimerEntrega"
        tools:targetApi="31">
        <activity
            android:name=".presentantion.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PPSPrimerEntrega.NoSplash"> <!-- importante -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentantion.activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.PPSPrimerEntrega">
        </activity>
        <activity
            android:name=".presentantion.activities.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.PPSPrimerEntrega">
        </activity>
    </application>

</manifest>